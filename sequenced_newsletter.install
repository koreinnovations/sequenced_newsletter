/**
 * @file
 * Install and uninstall functions for the Sequenced newsletter module.
 */

/**
 * Implementation of hook_install().
 */
function sequenced_newsletter_install() {
  drupal_install_schema('sequenced_newsletter');
  drupal_install_schema('sequenced_newsletter_conf');
}

/**
 * Implementation of hook_schema().
 */
function sequenced_newsletter_schema() {
  // Database for storing newsletters
  $schema['sequenced_newsletter'] = array(
    'fields' => array(
      'nid' => array(
        'type' => 'int',
        'size' => 'big',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0),
      'sid' => array(
        'type' => 'int',
        'size' => 'big',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0),
      'sqnid' => array(
        'type' => 'int',
        'size' => 'big',
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0),
      'date_spooled' => array(
        'type' => 'int',
        'length' => 11,
        'not null' => TRUE,
        'unsigned' => TRUE,
        'default' => 0)
    )
  );
  
  // Confiuration database.
  $schema['sequenced_newsletter_conf'] = _sequenced_newsletter_conf_schema();

  return $schema;
}


