/**
 * Implementation of hook_uninstall().
 */
function sequenced_newsletter_uninstall() {
  drupal_uninstall_schema('sequenced_newsletter');
  drupal_uninstall_schema('sequenced_newsletter_conf');
}

/**
 * Updates module to be able to use multiple sequences.
 */
function sequenced_newsletter_update_6001() {
  // Add table sequenced_newsletter_conf
  $ret = array();
  db_create_table($ret, 'sequenced_newsletter_conf', _sequenced_newsletter_conf_schema());
  
  // Add sqnid field to sequenced_newsletter
  $ret = array();
  db_add_field($ret, 'sequenced_newsletter', 'sqnid', 
    array(
      'type' => 'int',
      'size' => 'big',
      'not null' => TRUE,
      'unsigned' => TRUE,
      'default' => 0
    )
  );
  
  // Get data about old newsletter.
  $tid = variable_get('sequenced_newsletter_master', 0);
  $last_send = variable_get('sequenced_newsletter_last_run', 0);
  $name = "Imported sequenced newsletter";
  $interval = variable_get('sequenced_newsletter_period', 0);
  $status = variable_get('sequenced_newsletter_enable', 0);
  $start = strtotime(variable_get('sequenced_newsletter_start_time', '01-01-1970 - 00:01'));
  
  print variable_get('sequenced_newsletter_start_time', '01-01-1970 - 00:01')."\n";
  print variable_get('sequenced_newsletter_last_run', 0)."\n";
  print variable_get('sequenced_newsletter_enable', 0)."\n";
    
  // Delete old variables
  variable_del('sequenced_newsletter_master');
  variable_del('sequenced_newsletter_last_run');
  variable_del('sequenced_newsletter_period');
  variable_del('sequenced_newsletter_enable');
  variable_del('sequenced_newsletter_start_time');
  
  // Import old newsletter
  db_query("INSERT INTO {sequenced_newsletter_conf}(tid,name,start_date,last_send,send_interval,sort,status) VALUES('%d','%s','%d','%d','%d','%d','%d')",
    $tid,
    $name,
    $start,
    $last_send,
    $interval,
    $status
  );
  db_query("UPDATE {sequenced_newsletter} SET sqnid=1");
  
}